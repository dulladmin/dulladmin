                    :key="item.dataIndex"
                  >
                    <div>
                      <a-checkbox
                        v-model="item.show"
                        @change="
                          handleTableColumnsShowChange(
                            $event,
                            item as TableColumnData,
                            index
                          )
                        "
                      >
                        \{{ item.title }}
                      </a-checkbox>
                    </div>
                  </div>
                </div>
              </template>
            </a-popover>
          </a-tooltip>
        </a-col>
      </a-row>

      <!-- Table -->
      <a-table
        row-key="id"
        :loading="loading"
        :pagination="tablePagination"
        :columns="(tableColumnsShow as TableColumnData[])"
        :data="tableData"
        @page-change="onTablePageChange"
        {{#if sortable}}
        @sorter-change="onTableSorterChange"
        {{/if}}
      >
      {{#each model.attributes}}
        <template #{{name}}="{ record, column }">
        {{#if collection}}
          {{#if object}}
          <DullTable
            :data="record[column.dataIndex]"
            :meta="modelMetadata[column.dataIndex]"
          />
          {{else}}
          <DullList
            :data="record[column.dataIndex]"
            :meta="modelMetadata[column.dataIndex]"
          />
          {{/if}}
        {{else}}
          {{#if object}}
          <DullDescriptions
            :data="record[column.dataIndex]"
            :meta="modelMetadata[column.dataIndex]"
          />
          {{else}}
          <DullData
            :data="record[column.dataIndex]"
            :meta="modelMetadata[column.dataIndex]"
          />
          {{/if}}
        {{/if}}
        </template>
      {{/each}}
        <!-- eslint-disable vue/no-unused-vars -->
        <!-- Table Model Operations -->
        <template #tableOperationsColumn="{ record, column }">
          <a-space>
            {{#if resourceActions.show }}
            <a-button
              {{#if resourceActions.show.authority}}
              v-permission="[{{#each resourceActions.show.authority}}'{{this}}', {{/each}}]"
              {{/if}}
              type="outline"
              status="success"
              size="small"
              @click="goto({ name: '{{ resourceActions.show.name }}', params: { id: record.id } })"
            >
              \{{ $t('table.actions.show') }}
            </a-button>
            {{/if}}
            {{#if resourceActions.edit }}
            <a-button
              {{#if resourceActions.edit.authority}}
              v-permission="[{{#each resourceActions.edit.authority}}'{{this}}', {{/each}}]"
              {{/if}}
              type="outline"
              status="warning"
              size="small"
              @click="goto({ name: '{{ resourceActions.edit.name }}', params: { id: record.id } })"
            >
              \{{ $t('table.actions.edit') }}
            </a-button>
            {{/if}}
          </a-space>
        </template>
        <!-- eslint-enable -->
      </a-table>
    </a-card>

    <!-- Table Model Operations -->
    <div v-show="false" ref="tableOperationsColumnRenderableRef">
      {{#if resourceActions.show}}
      <span
        {{#if resourceActions.show.authority}}
        v-permission="[{{#each resourceActions.show.authority}}'{{this}}', {{/each}}]"
        {{/if}}
      />
      {{/if}}
      {{#if resourceActions.edit}}
      <span
        {{#if resourceActions.edit.authority}}
        v-permission="[{{#each resourceActions.edit.authority}}'{{this}}', {{/each}}]"
        {{/if}}
      />
      {{/if}}
    </div>

    {{#if searchable}}
    <!-- Table Search -->
    <a-modal
      class="dulladmin-table-block-search-modal"
      v-model:visible="searchModalVisible"
      :okText="$t('table.actions.search')"
      :on-before-ok="handleSearchModalBeforeOk"
      @cancel="handleSearchModalCancel"
    >
      <template #title>
        \{{ $t('{{block.title.i18nKey}}') }}
        -
        \{{ $t('table.actions.search') }}
      </template>
      <a-form
        :model="tableSearchForm"
        :auto-label-width="true"
      >
      {{#each searchers}}
        <DullFormItem
          v-model="tableSearchForm.{{name}}"
          :meta="searchMetadata.{{name}}"
        />
      {{/each}}
      </a-form>
    </a-modal>
    {{/if}}
  </div>
